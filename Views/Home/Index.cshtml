<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebGIS Không Gian Xanh Củ Chi</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- Leaflet -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

    <!-- BUTTON COLLAPSE -->
    <div id="toggle-btn" title="Mở/Đóng sidebar">
        <i class="fas fa-bars"></i>
    </div>

    <!-- SIDEBAR -->
    <div id="sidebar" class="sidebar-collapsed">
        
        <h2 class="title">🌿 Không Gian Xanh Củ Chi</h2>

        <!-- YEAR SELECT -->
        <label class="label">Chọn năm:</label>
        <select id="yearSelect" class="select-styled"></select>

        <!-- MINI STATS -->
        <div id="miniStats">
            <h3 class="sub-title">📊 Thống kê nhanh</h3>

            <div class="stat-grid">
                <div class="stat-box">
                    <p>Diện tích xanh</p>
                    <h2 id="areaValue">-- km²</h2>
                </div>

                <div class="stat-box">
                    <p>Tỷ lệ xanh</p>
                    <h2 id="ratioValue">-- %</h2>
                </div>

                <div class="stat-box">
                    <p>Dữ liệu gần nhất</p>
                    <h2 id="monthValue">--</h2>
                </div>
            </div>
        </div>

        <!-- NOTE BOX -->
        <div id="yearNote" class="note-box">
            <h3 class="sub-title">📝 Đánh giá</h3>
            <p id="noteText">Chọn năm để xem đánh giá...</p>
        </div>

        <!-- LEGEND -->
        <div id="legend">
            <h3 class="sub-title">🗺️ Chú giải</h3>

            <div class="legend-item">
                <span class="color-box c1"></span> NDVI cao
            </div>
            <div class="legend-item">
                <span class="color-box c2"></span> NDVI trung bình
            </div>
            <div class="legend-item">
                <span class="color-box c3"></span> NDVI thấp
            </div>
            <div class="legend-item">
                <span class="color-box border"></span> Ranh giới Củ Chi
            </div>
        </div>

        <!-- COMPARE -->
        <div id="compare">
            <h3 class="sub-title">🔍 So sánh 2 năm</h3>

            <div class="compare-grid">
                <select id="yearA" class="select-styled"></select>
                <select id="yearB" class="select-styled"></select>
            </div>

            <button id="compareBtn" class="btn-main" title="So sánh hai năm">
                <i class="fa-solid fa-layer-group"></i> So sánh
            </button>

            <button id="btnDiff" class="btn-diff" title="Xem biến động 2019-2025">
                🌈 Biến động 2019 → 2025
            </button>

            <button id="btnGreen" class="btn-green" title="Xem không gian xanh">
                🌱 Không gian xanh
            </button>
        </div>

    </div>

    <!-- MAP -->
    <div id="map"></div>

    <!-- CHART PANEL (Collapsible) -->
    <div id="chartPanel" class="chart-collapsed">
        <button id="chartToggle" class="chart-toggle-btn" title="Thu gọn/Mở rộng biểu đồ">
            <i class="fas fa-chart-line"></i>
        </button>
        <div class="chart-content">
            <h3>Diện tích xanh theo năm</h3>
            <canvas id="chart"></canvas>
        </div>
    </div>

    <!-- LOADING -->
    <div id="loading">
        <div class="spinner"></div>
    </div>

    <!-- APP JS -->
    <script src="~/js/app.js"></script>

</body>
</html>