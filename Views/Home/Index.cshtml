<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebGIS Không Gian Xanh Củ Chi</title>

    <link rel="stylesheet" href="~/css/style.css" />

    <!-- Leaflet -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

    <!-- COLLAPSE BUTTON -->
    <div id="toggle-btn"><i class="fas fa-bars"></i></div>

    <!-- SIDEBAR -->
    <div id="sidebar">
        <h2>🌿 Không Gian Xanh Củ Chi</h2>

        <label class="label">Chọn năm:</label>
        <select id="yearSelect"></select>

        <div id="miniStats">
            <h3>📊 Thống kê nhanh</h3>

            <div class="stat-box">
                <p>Diện tích xanh:</p>
                <h2 id="areaValue">-- km²</h2>
            </div>

            <div class="stat-box">
                <p>Tỷ lệ xanh:</p>
                <h2 id="ratioValue">-- %</h2>
            </div>

            <div class="stat-box">
                <p>Dữ liệu gần nhất:</p>
                <h2 id="monthValue">--</h2>
            </div>
        </div>

        <!-- LEGEND -->
        <div id="legend">
            <h3>🗺️ Chú giải</h3>

            <div class="legend-item">
                <span class="color-box c1"></span> NDVI cao
            </div>

            <div class="legend-item">
                <span class="color-box c2"></span> NDVI trung bình
            </div>

            <div class="legend-item">
                <span class="color-box c3"></span> NDVI thấp
            </div>

            <div class="legend-item">
                <span class="color-box border"></span> Ranh giới Củ Chi
            </div>
        </div>

        <!-- COMPARE -->
        <div id="compare">
            <h3>🔍 So sánh 2 năm</h3>
            <select id="yearA"></select>
            <select id="yearB"></select>
            <button id="compareBtn">So sánh</button>
        </div>
    </div>

    <!-- MAP -->
    <div id="map"></div>

    <!-- CHART -->
    <div id="chartPanel">
        <h3>📈 Diện tích xanh theo năm</h3>
        <canvas id="chart"></canvas>
    </div>

    <!-- LOADING -->
    <div id="loading">
        <div class="spinner"></div>
    </div>

    

   <script src="~/js/app.js"></script>
</body>
</html>

